          <pose>0.13 0.02 0.43 0 0 0</pose>
          <geometry>
            <box>
              <size>0.30 0.02 0.04</size>
            </box>
          </geometry>
        </visual>
    </link>
    
    <joint type="revolute" name="left_wheel_hinge">
      <pose>0 0.0 -0.02 0 0 0</pose>
      <child>left_wheel</child>
      <parent>chassis</parent>
      <axis>
        <xyz>0 1 0</xyz>
      </axis>
    </joint>

    <joint type="revolute" name="right_wheel_hinge">
      <pose>0 0 0.02 0 0 0</pose>
      <child>right_wheel</child>
      <parent>chassis</parent>
      <axis>
        <xyz>0 1 0</xyz>
      </axis>
    </joint>
      
    <joint type="revolute" name="lower_arm_hinge">
      <pose>0 0 0.17 0 0 0</pose>
      <origin xyz="0 0 0.17" rpy="0 0 0" />
      <child>lower_arm</child>
      <parent>chassis</parent>
      <axis>
        <xyz>0 1 0</xyz>
      </axis>
      <dynamics damping="0.7" />
      <limit lower="0" upper="1.50" />
    </joint>  
      
    <joint type="revolute" name="upper_arm_hinge">
      <pose>0 0 0.43 0 0 0</pose>
      <origin xyz="0 0 0.43" rpy="0 0 0" />
      <child>upper_arm</child>        
      <parent>lower_arm</parent>
      <axis>
        <xyz>0 1 0</xyz>
      </axis>
      <dynamics damping="0.7"/>
      <limit lower="-1.50" upper="0" />
    </joint>


    <!-- ROS Control plugin for gazebo -->
    <gazebo>
      <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
        <robotNamespace>/our_robot</robotNamespace>
      </plugin>
    </gazebo>
    
    <transmission name="left_wheel_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <actuator name="motor1">
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
      <joint name="left_wheel_hinge">
        <hardwareInterface>EffortJointInterface</hardwareInterface>
      </joint>
    </transmission>

    <transmission name="right_wheel_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <actuator name="motor2">
      <mechanicalReduction>1</mechanicalReduction>
      </actuator>
      <joint name="right_wheel_hinge">
        <hardwareInterface>EffortJointInterface</hardwareInterface>
      </joint>
    </transmission>

    <transmission name="lower_arm_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <actuator name="motor3">
      <mechanicalReduction>1</mechanicalReduction>
      </actuator>
      <joint name="lower_arm_hinge">
        <hardwareInterface>EffortJointInterface</hardwareInterface>
      </joint>
    </transmission>

    <transmission name="upper_arm_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <actuator name="motor4">
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
      <joint name="upper_arm_hinge">
        <hardwareInterface>EffortJointInterface</hardwareInterface>
