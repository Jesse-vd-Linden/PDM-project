    <link name="lower_arm">
      <mass>0.10</mass>
      <gravity>0</gravity>
      <inertia>
          <ixx>0.001</ixx>
          <ixy>0.001</ixy>
          <ixz>0.001</ixz>
          <iyy>0.001</iyy>
          <iyz>0.001</iyz>
          <izz>0.001</izz>
      </inertia>
      <collision name='arm1_collision'>
          <pose>0 0.0 0.3 0 0 0</pose>
          <geometry>
            <box>
              <size>.04 0.02 0.30</size>
            </box>
          </geometry>
      </collision>
      <self_collide>1</self_collide>
      <visual name='arm1_visual'>
        <pose>0 0.0 0.3 0 0 0</pose>
        <geometry>
          <box>
            <size>.04 0.02 0.30</size>
          </box>
        </geometry>
      </visual>
    </link>
    
    <link name="upper_arm">
      <mass>0.10</mass>
      <gravity>0</gravity>
    <inertia>
        <ixx>0.001</ixx>
        <ixy>0.001</ixy>
        <ixz>0.001</ixz>
        <iyy>0.001</iyy>
        <iyz>0.001</iyz>
        <izz>0.001</izz>
    </inertia>
      <collision name='arm2_collision'>
          <pose>0.13 0.02 0.43 0 0 0</pose>
          <geometry>
            <box>
              <size>0.30 0.02 0.04</size>
            </box>
          </geometry>
        </collision>
